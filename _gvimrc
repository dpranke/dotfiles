set guioptions=egmrLt
set ruler
set lines=60
set columns=85

if has("macunix")
  set bg=light
  set guifont=Inconsolata:h16,Menlo:h14
  set linespace=2
  hi ColorColumn guibg=#d0d0d0
elseif has("unix")  " Linux, mostly
  set bg=dark
  set guifont=Inconsolata\ 13,Monospace\ 12
  set linespace=0
  colorscheme peaksea
  hi ColorColumn guibg=#404040
elseif has("gui_win32")
  set bg=dark
  set guifont=Inconsolata:h12,Consolas:h12
  set linespace=0
  colorscheme evening
  hi ColorColumn guibg=#404040
endif
