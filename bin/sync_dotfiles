#!/bin/bash

function usage() {
  echo "usage: sync_dotfiles [-hnruv] [ -R repo-dir ] [ -H home-dir ] "
  echo "  -h -> show-usage"
  echo "  -n -> no-execute"
  echo "  -r -> refresh repo from home"
  echo "  -u -> refresh user from repo"
  echo "  -v -> verbose"
  exit 1
}

HOMEDIR=$HOME
REPODIR=$src/dotfiles

opt_n=0
opt_r=0
opt_u=0
opt_v=0
while getopts hH:nrR:uU:v arg
do
  case "$arg" in
    R) REPODIR=$OPTARG ;;
    h) usage   ;;
    H) HOMEDIR=$OPTARG ;;
    n) opt_n=1 ;;
    r) opt_r=1 ;;
    u) opt_u=1 ;;
    v) opt_v=1 ;;
    *) usage ;;
  esac
done

if [ ! -d $REPODIR ]
then
    echo "Couldn't find your repo dir at $REPODIR."
    exit 1
fi
if [ ! -d $HOMEDIR ]
then
    echo "Couldn't find your home dir at $HOMEDIR."
    exit 1
fi

if [ $opt_r -eq 0 -a $opt_u -eq 0 ]
then
  echo "Must specify either -r or -u"
  exit 1
fi

declare -a dotdirs=(
  bin
  mbin
  wbin
)

declare -a dotfiles=(
  .bash_profile
  .bashrc
  .bashrc.funcs.linux
  .bashrc.funcs.mac
  .bashrc.funcs.win
  .bashrc.linux
  .bashrc.mac
  .bashrc.win
  .gitignore
  .gitignore_global
  .gvimrc
  .hushlogin
  .vimrc
  bin/csync
  bin/deps
  bin/dub
  bin/echodo
  bin/fl
  bin/gcsrc
  bin/pset_aux
  bin/st
  bin/sync_dotfiles
  mbin/mvim
  wbin/gclient
  wbin/git
  wbin/gvim
  wbin/python3
)

declare -a batdirs=(
  bat
)

declare -a batfiles=(
  bat/csrc.bat
  bat/home.bat
  bat/ptime.bat
  bat/ptime.py
  bat/redot.bat
  bat/setdirs.bat
  bat/src.bat
  bat/sv.bat
  bat/whome.bat
)

function echodo() {
  if [ $opt_n -o $opt_v ]
  then
    echo "$@"
  fi
  if [ $opt_n -eq 0 ]
  then
    $@
  fi
}

function mkdirif() {
  if [ ! -d $1 ]
  then
    echodo mkdir $1
  fi
}

function cpif() {
  if [ ! -f $1 ]
  then
    echodo cp -p $1 $2
  elif ! cmp --quiet $1 $2
  then
    echodo cp -p $1 $2
  fi
}

if [ $opt_u -eq 1 ]
then
  src=$REPODIR
  dst=$HOMEDIR
else
  src=$HOMEDIR
  dst=$REPODIR
fi

for i in "${dotdirs[@]}"
do
  mkdirif $dst/$i
done

for i in "${dotfiles[@]}"
do
  cpif $src/$i $dst/$i
done

if [ -z "$USERPROFILE" -o -z "$USER" ]
then
  exit 0
fi

if [ $opt_u -eq 1 ]
then
  src=$REPODIR
  dst=/c/Users/$USER
else
  src=/c/Users/$USER
  dst=$REPODIR
fi

for i in "${batdirs[@]}"
do
  mkdirif $dst/$i
done

for i in "${batfiles[@]}"
do
  cpif $src/$i $dst/$i
done

if [ $opt_u -eq 1 ]
then
  echodo cp -p $src/.vimrc $dst/_vimrc
  echodo cp -p $src/.gvimrc $dst/_gvimrc
else
  echodo cp -p $src/_vimrc $dst/.vimrc
  echodo cp -p $src/_gvimrc $dst/.gvimrc
fi
